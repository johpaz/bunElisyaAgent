# Variables de entorno para el proyecto Bun Elysya

# Api de openai
API_KEY_OPENAI=tu_openai_api
# Token de acceso de Meta (WhatsApp Business API)
META_TOKEN=tu_meta_token_aqui

# Token de verificación para webhooks de Meta
META_VERIFY_TOKEN=tu_verify_token_aqui

# URL base de la API de Meta
META_BASE_URL=https://graph.facebook.com/v23.0

# Número de teléfono de WhatsApp Business
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id_aqui

# Configuración de base de datos PostgreSQL
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/bun_elysya

# Puerto del servidor
PORT=4000

# Nivel de logging
LOG_LEVEL=info

# Configuración adicional si es necesaria
# API_KEY_OPENAI=tu_api_key_openai_aqui